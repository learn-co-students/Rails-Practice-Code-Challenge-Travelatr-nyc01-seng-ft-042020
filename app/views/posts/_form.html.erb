<% if flash[:my_errors] %>
    <p><%= flash[:my_errors] %></p>
    <% end %>

<%= form_for @post do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :content %>
<%= f.text_field :content %>

<%= f.label :blogger %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>

<%= f.label :destination %>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>

<%= f.submit %>

<% end %>