<%= form_for @post do |f| %>

<%= f.label :Title %>
<%= f.text_field :title %>

<%= f.label :Content %>
<%= f.text_field :content %>

<%= f.label :Likes %>
<%= f.number_field :likes %>

<!-- blogger drop-down -->
<%= f.label :blogger_id %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>

<!-- destination drop-down -->
<%= f.label :destination_id %>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>

<%= f.submit %>

<% end %>